# Environment Configuration Example
# Copy this file to .env and update with your values

# General
NODE_ENV=development
LOG_LEVEL=debug

# API Gateway
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=localhost

# Authentication Service
AUTH_SERVICE_PORT=3100
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=30d
MFA_ISSUER=HomeAutomation
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800000

# Device Service
DEVICE_SERVICE_PORT=3200
DEVICE_HEARTBEAT_INTERVAL=60000
DEVICE_OFFLINE_THRESHOLD=300000
DEVICE_COMMAND_TIMEOUT=30000

# Automation Service
AUTOMATION_SERVICE_PORT=3300
AUTOMATION_EVALUATION_TIMEOUT=100
AUTOMATION_EXECUTION_TIMEOUT=30000

# ML Service
ML_SERVICE_PORT=8000
ML_MODEL_PATH=./ml-models/saved
ML_TRAINING_BATCH_SIZE=32
ML_TRAINING_EPOCHS=100
ML_SEQUENCE_LENGTH=168
ML_PREDICTION_HORIZON=24

# Energy Service
ENERGY_SERVICE_PORT=3400
ENERGY_READING_INTERVAL=60000
ENERGY_AGGREGATION_INTERVAL=3600000

# Security Service
SECURITY_SERVICE_PORT=8001
FACE_RECOGNITION_THRESHOLD=0.6
VIDEO_RETENTION_DAYS=30
MOTION_DETECTION_SENSITIVITY=0.7

# Notification Service
NOTIFICATION_SERVICE_PORT=3500
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Analytics Service
ANALYTICS_SERVICE_PORT=3600
ANALYTICS_AGGREGATION_INTERVAL=3600000

# Database - PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=homeautomation
DATABASE_USER=homeauto
DATABASE_PASSWORD=homeauto_dev
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Database - MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=devices
MONGODB_USER=homeauto
MONGODB_PASSWORD=homeauto_dev
MONGODB_AUTH_SOURCE=admin

# Database - TimescaleDB
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DATABASE=timeseries
TIMESCALE_USER=homeauto
TIMESCALE_PASSWORD=homeauto_dev

# Cache - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=homeauto:

# Message Broker - MQTT
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=homeauto
MQTT_PASSWORD=homeauto_dev
MQTT_CLIENT_ID=homeauto-server
MQTT_CLEAN_SESSION=true
MQTT_KEEPALIVE=60

# Message Broker - RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=homeauto
RABBITMQ_PASSWORD=homeauto_dev
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=homeauto

# Zigbee Configuration
ZIGBEE_ENABLED=true
ZIGBEE_ADAPTER=/dev/ttyUSB0
ZIGBEE_NETWORK_KEY=01030507090B0D0F00020406080A0C0D
ZIGBEE_PAN_ID=0x1A62
ZIGBEE_CHANNEL=11
ZIGBEE_PERMIT_JOIN_DURATION=60

# Z-Wave Configuration
ZWAVE_ENABLED=true
ZWAVE_ADAPTER=/dev/ttyACM0
ZWAVE_NETWORK_KEY=0x01,0x02,0x03,0x04,0x05,0x06,0x07,0x08,0x09,0x0A,0x0B,0x0C,0x0D,0x0E,0x0F,0x10

# WiFi Device Discovery
WIFI_DISCOVERY_ENABLED=true
WIFI_DISCOVERY_INTERVAL=300000
MDNS_ENABLED=true
SSDP_ENABLED=true

# Bluetooth Configuration
BLUETOOTH_ENABLED=true
BLUETOOTH_ADAPTER=hci0
BLUETOOTH_SCAN_DURATION=10000

# Cloud Storage - AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_SECURITY=homeauto-security
S3_BUCKET_BACKUPS=homeauto-backups
S3_BUCKET_LOGS=homeauto-logs

# Email Service - SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@homeautomation.io
SENDGRID_FROM_NAME=Home Automation

# SMS Service - Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications - Firebase
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Weather Service
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
WEATHER_UPDATE_INTERVAL=1800000

# Voice Assistants
ALEXA_SKILL_ID=your-alexa-skill-id
ALEXA_CLIENT_ID=your-alexa-client-id
ALEXA_CLIENT_SECRET=your-alexa-client-secret

GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

HOMEKIT_PIN=123-45-678
HOMEKIT_USERNAME=CC:22:3D:E3:CE:30
HOMEKIT_SETUP_ID=1QJ8

# Monitoring - Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Monitoring - Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Logging - ELK Stack
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000
KIBANA_HOST=localhost
KIBANA_PORT=5601

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=change-this-to-a-secure-random-string
ENCRYPTION_KEY=change-this-to-a-32-character-key
ENCRYPTION_ALGORITHM=aes-256-gcm

# Feature Flags
FEATURE_ML_ENABLED=true
FEATURE_VOICE_CONTROL_ENABLED=true
FEATURE_SOLAR_OPTIMIZATION_ENABLED=true
FEATURE_FACE_RECOGNITION_ENABLED=true
FEATURE_GEOFENCING_ENABLED=true
FEATURE_BACKUP_ENABLED=true

# Frontend - Web
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Frontend - Mobile
EXPO_PUBLIC_API_URL=http://localhost:8080
EXPO_PUBLIC_WS_URL=ws://localhost:8080

# Development
DEBUG=homeauto:*
MOCK_DEVICES=false
MOCK_WEATHER=false
MOCK_ML=false

# Testing
TEST_DATABASE_URL=postgresql://homeauto:homeauto_test@localhost:5432/homeautomation_test
TEST_MONGODB_URL=mongodb://localhost:27017/devices_test
TEST_REDIS_URL=redis://localhost:6379/1

# CI/CD
CI=false
GITHUB_TOKEN=your-github-token
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true

# Performance
MAX_CONCURRENT_DEVICES=200
MAX_AUTOMATIONS_PER_HOME=100
MAX_SCENES_PER_HOME=50
CACHE_TTL=3600
API_TIMEOUT=30000

# Limits
MAX_FILE_UPLOAD_SIZE=10485760
MAX_VIDEO_DURATION=300
MAX_AUTOMATION_ACTIONS=20
MAX_DEVICE_COMMANDS_PER_MINUTE=60
