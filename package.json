{
  "name": "intelligent-home-automation",
  "version": "1.0.0",
  "description": "Comprehensive smart home automation platform with AI, multi-protocol device support, and advanced features",
  "private": true,
  "workspaces": [
    "backend/*",
    "frontend/*",
    "device-drivers/*",
    "ml-models/*",
    "edge-computing/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:*\"",
    "dev:auth": "cd backend/auth-service && npm run dev",
    "dev:device": "cd backend/device-service && npm run dev",
    "dev:automation": "cd backend/automation-service && npm run dev",
    "dev:web": "cd frontend/web && npm run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
