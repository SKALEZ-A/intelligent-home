PORT=3008
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/weather

# JWT
JWT_SECRET=your_jwt_secret_key_here

# Weather API Providers
OPENWEATHER_API_KEY=your_openweather_api_key
WEATHERAPI_KEY=your_weatherapi_key
DARKSKY_API_KEY=your_darksky_api_key

# Weather Update Intervals
CURRENT_WEATHER_UPDATE_INTERVAL=300000
FORECAST_UPDATE_INTERVAL=3600000
ALERTS_CHECK_INTERVAL=60000

# Cache Settings
CACHE_TTL_CURRENT=300
CACHE_TTL_FORECAST=3600
CACHE_TTL_ALERTS=60

# Logging
LOG_LEVEL=info
