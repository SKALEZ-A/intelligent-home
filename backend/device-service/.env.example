PORT=3003
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/devices

# TimescaleDB
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DATABASE=device_telemetry
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=password

# JWT
JWT_SECRET=your_jwt_secret_key_here

# MQTT
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=mqtt_user
MQTT_PASSWORD=mqtt_password

# WebSocket
WS_PORT=3013

# Device Discovery
DISCOVERY_ENABLED=true
DISCOVERY_INTERVAL=60000

# Firmware Updates
FIRMWARE_UPDATE_URL=https://firmware.example.com
FIRMWARE_CHECK_INTERVAL=86400000

# Telemetry
TELEMETRY_RETENTION_DAYS=90
TELEMETRY_AGGREGATION_INTERVAL=300000

# Logging
LOG_LEVEL=info
